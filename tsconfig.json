{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "incremental": true,
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["components/*"],
      "@data/*": ["data/*"],
      "@layouts/*": ["layouts/*"],
      "@lib/*": ["lib/*"],
      "@styles/*": ["styles/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"]
    }
  },
  "include": ["next-env.d.ts", "src/types.d.ts", "**/*.ts", "**/*.tsx", "src/lib/contents.js"],
  "exclude": ["node_modules"]
}
